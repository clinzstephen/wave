<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/equilizerbg">

    <LinearLayout
        android:id="@+id/backbutton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backbuttonIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/backbutton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        >

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    >

                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                        android:id="@+id/volumeSeekBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:progressBackgroundTint="@color/colorPrimaryDark"
                        android:progressDrawable="@drawable/seek_bar"
                        android:progressTint="@color/colorPrimaryDark"
                        android:splitTrack="false"
                        android:thumb="@drawable/seek_thumb"
                        android:thumbTint="#FFF"
                        app:seekBarRotation="CW270" /> <!-- Rotation: CW90 or CW270 -->
                </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    tools:layout_editor_absoluteX="57dp"
                    tools:layout_editor_absoluteY="0dp">

                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                        android:id="@+id/volumeSeekBar2"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:progressBackgroundTint="@color/colorPrimaryDark"
                        android:progressDrawable="@drawable/seek_bar"
                        android:progressTint="@color/colorPrimaryDark"
                        android:splitTrack="false"
                        android:thumb="@drawable/seek_thumb"
                        android:thumbTint="#FFF"
                        app:seekBarRotation="CW270" /> <!-- Rotation: CW90 or CW270 -->
                </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    tools:layout_editor_absoluteX="57dp"
                    tools:layout_editor_absoluteY="0dp">

                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                        android:id="@+id/volumeSeekBar3"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:progressBackgroundTint="@color/colorPrimaryDark"
                        android:progressDrawable="@drawable/seek_bar"
                        android:progressTint="@color/colorPrimaryDark"
                        android:splitTrack="false"
                        android:thumb="@drawable/seek_thumb"
                        android:thumbTint="#FFF"
                        app:seekBarRotation="CW270" /> <!-- Rotation: CW90 or CW270 -->
                </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    tools:layout_editor_absoluteX="57dp"
                    tools:layout_editor_absoluteY="0dp">

                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                        android:id="@+id/volumeSeekBar4"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:progressBackgroundTint="@color/colorPrimaryDark"
                        android:progressDrawable="@drawable/seek_bar"
                        android:progressTint="@color/colorPrimaryDark"
                        android:splitTrack="false"
                        android:thumb="@drawable/seek_thumb"
                        android:thumbTint="#FFF"
                        app:seekBarRotation="CW270" /> <!-- Rotation: CW90 or CW270 -->
                </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>

                <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    tools:layout_editor_absoluteX="57dp"
                    tools:layout_editor_absoluteY="0dp">

                    <com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBar
                        android:id="@+id/volumeSeekBar5"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:progressBackgroundTint="@color/colorPrimaryDark"
                        android:progressDrawable="@drawable/seek_bar"
                        android:progressTint="@color/colorPrimaryDark"
                        android:splitTrack="false"
                        android:thumb="@drawable/seek_thumb"
                        android:thumbTint="#FFF"
                        app:seekBarRotation="CW270" />
                    <!-- Rotation: CW90 or CW270 -->
                </com.h6ah4i.android.widget.verticalseekbar.VerticalSeekBarWrapper>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="337dp"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/birdImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/group463" />

                <ImageView
                    android:id="@+id/thunderImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"

                    android:src="@drawable/path74" />

                <ImageView
                    android:id="@+id/rainImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"

                    android:src="@drawable/group613" />

                <ImageView
                    android:id="@+id/riverImage"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/group612" />

                <ImageView
                    android:id="@+id/leafImage"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/path79" />


            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:weightSum="2">
        <TextView
            android:id="@+id/popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:text="Climate"
            android:textColor="#FFFF"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
             />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5"
            android:layout_marginTop="20dp"
            >


            <Button
                android:id="@+id/playList1"
                android:layout_width="72dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="@drawable/rectanglesunny" />

            <Button
                android:id="@+id/playList2"
                android:layout_width="72dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="@drawable/rectanglesnow" />

            <Button
                android:id="@+id/playList3"
                android:layout_width="72dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="@drawable/rectanglerain" />

            <Button
                android:id="@+id/playList4"
                android:layout_width="72dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="@drawable/rectanglebird" />

            <Button
                android:id="@+id/playList5"
                android:layout_width="72dp"
                android:layout_height="125dp"
                android:layout_weight="1"
                android:background="@drawable/rectangleriver" />
        </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.905" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinslight"
            android:hint="music name"
            android:text="music name"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:text="music name"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/playButton"
            android:layout_width="23dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

